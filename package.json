{
  "name": "gold",
  "displayName": "黄金价格监控",
  "description": "在VS Code状态栏显示实时黄金价格",
  "version": "0.0.4",
  "publisher": "goldprice",
  "repository": {
    "type": "git",
    "url": "https://github.com/user/gold"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onStartupFinished",
    "onCommand:goldprice.refresh",
    "onCommand:goldprice.refreshHttp",
    "onCommand:goldprice.refreshZS",
    "onCommand:goldprice.refreshWs"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "goldprice.refresh",
        "title": "刷新黄金价格(所有数据源)"
      },
      {
        "command": "goldprice.refreshHttp",
        "title": "刷新黄金价格(民生)"
      },
      {
        "command": "goldprice.refreshZS",
        "title": "刷新黄金价格(浙商)"
      },
      {
        "command": "goldprice.refreshWs",
        "title": "刷新黄金价格(WebSocket)"
      }
    ],
    "configuration": {
      "title": "黄金价格监控",
      "properties": {
        "gold.httpUrl": {
          "type": "string",
          "default": "https://api.jdjygold.com/gw/generic/hj/h5/m/latestPrice",
          "description": "HTTP API地址"
        },
        "gold.httpRefreshInterval": {
          "type": "number",
          "default": 3000,
          "description": "HTTP请求刷新间隔(毫秒)"
        },
        "gold.wsUrl": {
          "type": "string",
          "default": "wss://alb-1ko0lowmvacsqia0ij.cn-shenzhen.alb.aliyuncs.com:26203",
          "description": "WebSocket服务器备用地址(动态获取失败时使用)"
        },
        "gold.wsReconnectInterval": {
          "type": "number",
          "default": 5000,
          "description": "WebSocket断线重连间隔(毫秒)"
        }
      }
    }
  },
  "scripts": {
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "16.x",
    "eslint": "^8.33.0",
    "@vscode/test-electron": "^2.2.3"
  },
  "dependencies": {
    "ws": "^8.16.0"
  }
}